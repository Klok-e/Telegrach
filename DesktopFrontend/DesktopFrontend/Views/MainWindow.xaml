<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DesktopFrontend.ViewModels"
        xmlns:v="clr-namespace:DesktopFrontend.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesktopFrontend.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="DesktopFrontend">
    <DockPanel>
        <v:ChatView DockPanel.Dock="Top" DataContext="{Binding Chat}" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" MinHeight="40">
            <Button Content="Send" />
            <TextBox AcceptsReturn="True"/>
        </StackPanel>
    </DockPanel>
</Window>